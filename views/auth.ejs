<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login & Signup</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', sans-serif;
    }

    body {
      background: linear-gradient(to top, #6d79ab, #3b3b58);
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    h1.fade-slide {
      position: absolute;
      top: 60px;
      width: 100%;
      text-align: center;
      color: white;
      font-size: 2.8rem;
      opacity: 0;
      transform: translateY(-30px);
      animation: fadeSlideDown 1s ease forwards;
    }

    @keyframes fadeSlideDown {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .container {
      background: rgba(255, 255, 255, 0.1);
      border-radius: 15px;
      padding: 2rem;
      width: 350px;
      backdrop-filter: blur(10px);
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
      color: white;
    }

    h2 {
      text-align: center;
      margin-bottom: 20px;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
      width: 100%;
      padding: 12px;
      margin: 10px 0;
      border: none;
      border-radius: 10px;
    }

    button {
      width: 100%;
      padding: 12px;
      background-color: #ffffff;
      color: #333;
      border: none;
      border-radius: 10px;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.3s;
    }

    button:hover {
      background-color: #ddd;
    }

    .switch {
      text-align: center;
      margin-top: 15px;
    }

    .switch a {
      color: #ffffff;
      text-decoration: underline;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1 class="fade-slide">MINI-URL</h1>

  <div class="container" id="login-container" style="<%= formType === 'login' ? '' : 'display: none;' %>">
    <h2>Login</h2>
    <form action="/user/login" method="POST">
      <input type="email" name="email" placeholder="Email" required>
      <input type="password" name="password" placeholder="Password" required>
      <button type="submit">Login</button>
    </form>
    <% if (formType === 'login' && error) { %>
      <div style="color: red; text-align: center;"><%= error %></div>
    <% } %>
    <div class="switch">
      Don't have an account? <a onclick="showSignup()">Sign Up</a>
    </div>
  </div>

  <div class="container" id="signup-container" style="<%= formType === 'signup' ? '' : 'display: none;' %>">
    <h2>Sign Up</h2>
    <form action="/user" method="POST">
      <input type="text" name="name" placeholder="Username" required>
      <input type="email" name="email" placeholder="Email" required>
      <input type="password" name="password" placeholder="Password" required>
      <button type="submit">Sign Up</button>
    </form>
    <% if (formType === 'signup' && error) { %>
      <div style="color: red; text-align: center;"><%= error %></div>
    <% } %>
    <div class="switch">
      Already have an account? <a onclick="showLogin()">Login</a>
    </div>
  </div>

  <script>
    function showSignup() {
      document.getElementById('login-container').style.display = 'none';
      document.getElementById('signup-container').style.display = 'block';
    }
    function showLogin() {
      document.getElementById('signup-container').style.display = 'none';
      document.getElementById('login-container').style.display = 'block';
    }
  </script>
</body>
</html>
